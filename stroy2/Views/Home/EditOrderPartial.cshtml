@*<div class="modal fade" id="modal-content">*@
    
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="EditOrdLabel">Изменить заказ</h4>
                <button type="button" class="close" data-bs-dismiss="modal">
                    <span>x</span>
                </button>
            </div>

            <div class="modal-body">
            <form asp-action="EditOrderPartial" asp-controller="Home" asp-route-id="@Model.Id">

                    <div class="form-group">

                        <label asp-for="Work"></label>
                        <input asp-for="Work" class="form-control" />
                        <span asp-validation-for="Work" class="text-danger"></span>

                    </div>
                    <div class="form-group">

                        <label asp-for="Locality"></label>
                        <input asp-for="Locality" class="form-control" />
                        <span asp-validation-for="Locality" class="text-danger"></span>

                    </div>
                    <div class="form-group">

                        <label asp-for="Volume"></label>
                        <input asp-for="Volume" class="form-control" />
                        <span asp-validation-for="Volume" class="text-danger"></span>

                    </div>
                    <div class="form-group">

                        <label asp-for="Material"></label>
                        <input asp-for="Material" class="form-control" />
                        <span asp-validation-for="Material" class="text-danger"></span>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-dark" data--bs-dismiss="modal">Выйти</button>
                        <input type="submit" value="Сохранить" class="btn btn-default" />
                    </div>
                </form>

            </div>

          

        </div>


  


